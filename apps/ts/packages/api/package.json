{
  "name": "@trading25/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "tsc && bun run generate:openapi",
    "start": "NODE_ENV=production bun src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "check": "biome check . --write",
    "typecheck": "tsc --noEmit",
    "generate:openapi": "bun src/scripts/generate-openapi.ts",
    "generate:types": "bun run generate:openapi && bunx openapi-typescript openapi.json -o src/generated/api-types.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "@scalar/hono-api-reference": "^0.9.28",
    "@trading25/shared": "workspace:*",
    "hono": "^4.6.0",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "openapi-typescript": "^7.10.1",
    "yaml": "^2.6.1"
  }
}

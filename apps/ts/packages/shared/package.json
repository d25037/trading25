{
  "name": "@trading25/shared",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ta": {
      "import": "./dist/ta/index.js",
      "types": "./dist/ta/index.d.ts"
    },
    "./ta/*": {
      "import": "./dist/ta/*.js",
      "types": "./dist/ta/*.d.ts"
    },
    "./dataset": {
      "import": "./dist/dataset/index.js",
      "types": "./dist/dataset/index.d.ts"
    },
    "./dataset/*": {
      "import": "./dist/dataset/*.js",
      "types": "./dist/dataset/*.d.ts"
    },
    "./utils/*": {
      "import": "./dist/utils/*.js",
      "types": "./dist/utils/*.d.ts"
    },
    "./types/api-types": {
      "import": "./dist/types/api-types.js",
      "types": "./dist/types/api-types.d.ts"
    },
    "./types/api-response-types": {
      "import": "./dist/types/api-response-types.js",
      "types": "./dist/types/api-response-types.d.ts"
    },
    "./portfolio": {
      "import": "./dist/portfolio/index.js",
      "types": "./dist/portfolio/index.d.ts"
    },
    "./portfolio/*": {
      "import": "./dist/portfolio/*.js",
      "types": "./dist/portfolio/*.d.ts"
    },
    "./portfolio-performance": {
      "import": "./dist/portfolio-performance/index.js",
      "types": "./dist/portfolio-performance/index.d.ts"
    },
    "./portfolio-performance/*": {
      "import": "./dist/portfolio-performance/*.js",
      "types": "./dist/portfolio-performance/*.d.ts"
    },
    "./watchlist": {
      "import": "./dist/watchlist/index.js",
      "types": "./dist/watchlist/index.d.ts"
    },
    "./watchlist/*": {
      "import": "./dist/watchlist/*.js",
      "types": "./dist/watchlist/*.d.ts"
    }
  },
  "scripts": {
    "build": "bun run --filter @trading25/clients-ts build && tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit",
    "bt:fetch-schema": "bun scripts/fetch-bt-openapi.ts",
    "bt:generate-types": "bunx openapi-typescript openapi/bt-openapi.json -o src/clients/backtest/generated/bt-api-types.ts",
    "bt:sync": "bun run bt:fetch-schema && bun run bt:generate-types",
    "bt:check": "bun scripts/check-bt-types.ts"
  },
  "dependencies": {
    "@trading25/clients-ts": "workspace:*",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "openapi-typescript": "^7.13.0"
  }
}

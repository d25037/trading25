{
  "name": "@trading25/web",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite --configLoader native",
    "build": "tsc && bunx --bun vite build --configLoader native",
    "preview": "bunx --bun vite preview --configLoader native",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:smoke": "playwright test --grep @smoke",
    "e2e:ui": "playwright test --ui",
    "e2e:install": "playwright install chromium",
    "check": "biome check . --write",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@tanstack/react-query": "^5.85.0",
    "@tanstack/react-router": "^1.132.21",
    "@trading25/clients-ts": "workspace:*",
    "@trading25/shared": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "js-yaml": "^4.1.1",
    "lightweight-charts": "^5.0.8",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.2.4",
    "react-json-view-lite": "^2.5.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@playwright/test": "^1.52.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.0.11",
    "jsdom": "^24.1.3",
    "tailwindcss": "^4.0.0",
    "vite": "^7.1.12",
    "vitest": "^4.0.18"
  }
}
